<% if @user.kakomons.count === 0 %>
    <span class='no-follower'>投稿はありません</span>
<% else %>
    <div class='users-show-content'>
        <% @kakomons.each do |kakomon| %>
            <div class='show-kakomon-content'>
                <div class='article-body'>
                    <% if kakomon.image1.attached? %>
                        <%= link_to kakomon_path(kakomon) do %>
                            <% if kakomon.image2.attached? || kakomon.image3.attached? %>
                                <i class="fa-solid fa-clone"></i>
                            <% end %>
                            <% if kakomon.image1.attached? %>
                                <%= image_tag kakomon.image1,class:'kakomon-show-link' %>
                            <% end %>
                        <% end %>
                    <% end %>
                </div>
                <div class='user-article-bottom'>
                    講義 : <%= kakomon.sub %><br>
                    教授 : <%= kakomon.prof %><br>
                    年度 : <%= kakomon.year %><br>
                    <span class='kakomon-date'><%= kakomon.created_at.strftime('%Y/%m/%d') %></span>
                </div>
            </div>
        <% end %>
    </div>
<% end %>