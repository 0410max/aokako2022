<% if @user.kakomons.count === 0 %>
    <span class='no-follower'>投稿はありません</span>
<% else %>
    <div class='users-show-content'>
        <% @kakomons.each do |kakomon| %>
            <div class='show-kakomon-content'>
                <div class='article-body'> 
                    <%if kakomon.images.length > 1 %>
                        <span class='many-images'><i class="fa-solid fa-clone"></i></span>
                    <% end %>
                    <% kakomon.images.each do |image|%>
                        <%= image_tag image,class:'end-users-kakomons-image-size' %>
                        <% break %>
                    <% end %>
                </div>
                <div class='user-article-bottom'>
                    講義 : <%= kakomon.sub %><br>
                    教授 : <%= kakomon.prof %><br>
                    年度 : <%= kakomon.year %><br>
                    <span class='kakomon-date'><%= kakomon.created_at.strftime('%Y/%m/%d') %></span>
                </div>
            </div>
        <% end %>
    </div>
<% end %>