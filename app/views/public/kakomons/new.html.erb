<div class='container'>
  <div class='row'>
    <div class='col-mg-3 new-container'>
      <div class='kakomon-new-content'>

        <h3>新規投稿</h3>

        <div class='select-past'>
          投稿内容 :
          <span class='past-paper'>過去問</span>
          <%= link_to new_board_path,class:'past-class-link' do %>
            <span class='past-class'>講義評価</span>
          <% end %> 
        </div>

        <%= form_with model:@kakomon,class:'kakomon-new',local: true do |f| %>
          <span class='image-count'>画像は1度に3枚まで投稿できます</span>
          <ul>
            <li class='image1'>画像<span></span> : 
                <%= f.file_field :image1,accept: "image/*" %>
            </li>
            <li class='image2'>画像2 : 
                <%= f.file_field :image2,accept: "image/*" %>
            </li>
            <li class='image3'>画像3 : 
                <%= f.file_field :image3,accept: "image/*" %>
            </li>
            <li class='add-image2'>画像を追加する</li>
            <li class='add-image3'>画像を追加する</li>
            <li class='mt-2'>
              年度  :
                <%= f.select :year, [["2005", "2005"],["2006", "2006"],["2007", "2007"],["2008", "2008"],
                ["2009", "2009"],["2010", "2010"],["2011", "2011"],["2012", "2012"],["2013", "2013"],
                ["2014", "2014"],["2015", "2015"],["2016", "2016"],["2017", "2017"],["2018", "2018"],
                ["2019", "2019"],["2020", "2020"],["2021", "2021"],["2022", "2022"]], {include_blank: "選択して下さい"},{class:'year'} %>
            </li>
            <li class='mt-2'>講義名 :  <%= f.text_field :sub,class:'prof-new',placeholder:'正式に記述' %></li>
            <li class='mt-2'>教授名 :  <%= f.text_field :prof,class:'prof-new',placeholder:'苗字のみ記述' %></li>
            <li class='mt-2'>コメント<br><%= f.text_area :comment,class:'comment-new',placeholder:'試験対策方法など' %></li>
          </ul>

          <% if @kakomon.errors.any? %>
            <div class="error">
              <% @kakomon.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          <% end %>
          <%= f.submit '投稿',class:'btn btn-light kakomon-submit' %>
        <% end %>
      </div>
    </div>
  </div>
</div>