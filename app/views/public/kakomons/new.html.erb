<div class='container'>
  <div class='row'>
    <div class='col-mg-3 new-container'>
      <div class='kakomon-new-content'>
        <div class='select-past'>
          投稿内容 :
          <span class='past-paper'>過去問</span>
          <%= link_to new_board_path,class:'past-class-link' do %>
            <span class='past-class'>講義評価</span>
          <% end %> 
        </div>

        <%= form_with model:@kakomon,class:'kakomon-new',local: true do |f| %>
          <ul>
            <li class='mt-2'><span class='kakomons-new-sub-font'>講義名</span> : <%= f.text_field :sub,class:'prof-new',placeholder:'正式に記述' %></li>
            <li class='mt-2'><span class='kakomons-new-prof-font'>教授名</span> :  <%= f.text_field :prof,class:'prof-new',placeholder:'苗字のみ記述' %></li>
            <li class='mt-2'>
              <span class='kakomons-new-year-font'>年度</span> :
                <%= f.select :year, [["2022", "2022"],["2021", "2021"],["2020", "2020"],["2019", "2019"],["2018", "2018"],
                ["2017", "2017"],["2016", "2016"],["2015", "2015"],["2014", "2014"],["2013", "2013"],["2012", "2012"],
                ["2011", "2011"],["2010", "2010"],["2009", "2009"],["2008", "2008"],["2007", "2007"],
                ["2006", "2006"],["2005", "2005"]] ,{include_blank: "選択して下さい"},{class:'year'} %>
            </li>
            <li class='image mt-2'>
              <span class='kakomons-new-image-font'>画像</span> :
                <%= f.file_field :images,accept: "image/*",multiple: true,class:'kakomons-new-image-file-field' %><br />
                <span class='image-count'>画像は1度に10枚まで投稿できます</span>
            </li>
          </ul>

          <% if @kakomon.errors.any? %>
            <div class="error">
              <% @kakomon.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          <% end %>
          <%= f.submit '投稿',class:'btn btn-light kakomon-submit' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
