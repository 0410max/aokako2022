<div class='kakomons-show-wrapper'>
    <div class='conainer'>
        <div class='row'>
            <div class='col-md-10 kakomons-show-kakomon'>
                <div class='end-users-kakomons-show-content-kakomon'>
                    <div class='back-link-wrapper'><%= link_to '<',:back,class:'back-link' %></div>
                    <% #モーダル %>
                    <%= render 'modal'%>
                    <div class='article-body-kakomons-show'>
                        <div class='kakomons-show-user-info'>
                            <%= link_to end_user_path(@kakomon.end_user),class:'index-profile-image-link' do %>
                                <%= image_tag @kakomon.end_user.get_profile_image,size:'30x30',class:'index-profile-image' %>
                            <% end %>
                            <span class='kakomons-show-user-name'><%= @kakomon.end_user.name %></span>
                            <span class='kakomons-show-top-button'><i class="fa-solid fa-ellipsis"></i></span>
                        </div>
                        <div class="swiper-container kakomons-show-swiper-container">
                            <div class="swiper-wrapper kakomons-show-swiper-wrapper">
                                <% @kakomon.images.each do |image|%>
                                    <div class="swiper-slide">
                                        <%= image_tag image,class:'kakomons-index-image-size' %>
                                    </div>
                                <% end %>
                            </div>
                            <div class="swiper-pagination"></div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                        <div class='kakomon-favorites-<%= @kakomon.id %> kakomon-favorites endusers-kakomon-favorites'>
                            <%= render 'public/kakomons/favorite' ,kakomon:@kakomon %>
                        </div>
                        <div class='user-article-bottom'>
                            講義 : <%= @kakomon.sub %><br>
                            教授 : <%= @kakomon.prof %><br>
                            年度 : <%= @kakomon.year %><br>
                            <span class='kakomon-date'><%= @kakomon.created_at.strftime('%Y/%m/%d') %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>