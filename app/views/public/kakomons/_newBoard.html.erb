<%= form_with model:@board,url:boards_path do |f| %>
    <ul>
        <li class='mt-2'>講義名 :  <%= f.text_field :sub,class:'prof-new',placeholder:'正式に記述' %></li>
        <li class='mt-2'>教授名 :  <%= f.text_field :prof,class:'prof-new',placeholder:'苗字のみ記述' %></li>
        <li class='mt-2' id="rating-form1"><span class='form1-new'>講義の面白さ</span><%= f.hidden_field :rate1, :value => 'score' %></li>
        <li class='mt-2' id="rating-form2"><span class='form2-new'>教授の人柄</span><%= f.hidden_field :rate2, :value => 'score' %></li>
        <li class='mt-2' id="rating-form3"><span class='form3-new'>単位の取りやすさ</span><%= f.hidden_field :rate3, :value => 'score' %></li>
        <li class='mt-2'>コメント<br><%= f.text_area :comment,class:'comment-new',placeholder:'講義内容、単位の取り方など' %></li>
    </ul>
    
    <% if @board.errors.any? %>
        <div class="error">
            <% @board.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </div>
    <% end %>
    <%= f.submit '投稿',class:'btn btn-light kakomon-submit' %>
<% end %>

<script>
    $('#rating-form1').raty({
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        scoreName: 'board[rate1]'
    });
</script>
