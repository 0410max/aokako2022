<% dmCount = Notification.where(action:'dm',visited_id:current_end_user.id,checked:false).count %>

<%= link_to rooms_path do %>
    <% if dmCount != 0 %>
        <span class='fa-stack'>
            <i class="fa-solid fa-paper-plane paper-plane-1200"></i>
            <% if dmCount > 9 %>
                <i class='fa-solid fa-circle circle-1200-big'></i>
            <% else %>
                <i class='fa-solid fa-circle circle-1200'></i>
            <% end %>
            <i class='dmCount-1200'><%= dmCount %></i>
        </span>
    <% else %>
        <i class="fa-solid fa-paper-plane paper-plane-1200"></i>
    <% end %>
<% end %>

