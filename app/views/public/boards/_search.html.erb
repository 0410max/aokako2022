<script>
  $('.board-search-sub')  
    .on('input',function(){
      let text = $('.board-search-sub').val();
      if (text == ''){
        $('.sub-search-submit').css('opacity','0.7')
      }else {
        $('.sub-search-submit').css('opacity','1')
      }  
    });
</script>
