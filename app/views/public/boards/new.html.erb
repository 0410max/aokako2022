<div class='container'>
    <div class='row'>
        <div class='col-mg-3 new-container'>
            <div class='kakomon-new-content'>                
                <div class='select-past-board'>
                    投稿内容 :
                    <%= link_to new_kakomon_path,class:'past-paper-boards-link' do %>
                        <span class='past-paper-boards'>過去問</span>
                    <% end %>
                    <span class='past-class-boards'>講義評価</span>
                </div>

                <%= form_with model:@board,local: true do |f| %>
                    <ul>
                        <li class='mt-2'><span class='kakomons-new-sub-font'>講義名</span> :  <%= f.text_field :sub,class:'prof-new',placeholder:'正式に記述' %></li>
                        <li class='mt-2'><span class='kakomons-new-prof-font'>教授名</span> :  <%= f.text_field :prof,class:'prof-new',placeholder:'苗字のみ記述' %></li>
                        <li class='mt-2' id="rating-form1"><span class='form1-new'>講義の面白さ</span><span id='star-rate1-<%= @board.id %>'><%= f.hidden_field :rate1, :value => 'score'%></span></li>
                        <li class='mt-2' id="rating-form2"><span class='form2-new'>教授の人柄</span><span id='star-rate2-<%= @board.id %>'><%= f.hidden_field :rate2, :value => 'score' %></span></li>
                        <li class='mt-2' id="rating-form3"><span class='form3-new'>単位の取りやすさ</span><span id='star-rate3-<%= @board.id %>'><%= f.hidden_field :rate3, :value => 'score' %></span></li>
                    </ul>
                    
                    <% if @board.errors.any? %>
                        <div class="error">
                            <% @board.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </div>
                    <% end %>
                    <%= f.submit '投稿',class:'btn btn-light kakomon-submit' %>
                <% end %>

                <script>
                    $('#star-rate1-<%= @board.id %>').empty();
                    $('#star-rate1-<%= @board.id %>').raty({
                        starOn: "<%= asset_path('star-on.png') %>",
                        starOff: "<%= asset_path('star-off.png') %>",
                        scoreName: 'board[rate1]'
                    });
                </script>
                <script>
                    $('#star-rate2-<%= @board.id %>').empty();
                    $('#star-rate2-<%= @board.id %>').raty({
                        starOn: "<%= asset_path('star-on.png') %>",
                        starOff: "<%= asset_path('star-off.png') %>",
                        scoreName: 'board[rate2]'
                    });
                </script>
                <script>
                    $('#star-rate3-<%= @board.id %>').empty();
                    $('#star-rate3-<%= @board.id %>').raty({
                        starOn: "<%= asset_path('star-on.png') %>",
                        starOff: "<%= asset_path('star-off.png') %>",
                        scoreName: 'board[rate3]'
                    });
                </script>

            </div>
        </div>
    </div>
</div>

