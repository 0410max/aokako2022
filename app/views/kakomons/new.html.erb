<div class='container'>
  <div class='col-mg-3 pt-3 new-container'>
    <div id='depSelector'>
    <h3>新規投稿</h3>
      <%= form_with model:@kakomon,class:'kakomon-new' do |f| %>
        <ul>
          <li class='mt-2'>画像を選択  :   <%= f.file_field :image, accept: "image/*", multiple: true %></li>
          <li class='mt-2'>
            年度  :   <select class='year-select'>
              <option hidden>選択してください</option>
              <option>2010</option>
              <option>2011</option>
              <option>2012</option>
              <option>2013</option>
              <option>2014</option>
              <option>2015</option>
              <option>2016</option>
              <option>2017</option>
              <option>2018</option>
              <option>2019</option>
              <option>2020</option>
              <option>2021</option>
              <option>2022</option>
            </select>
          </li>
          <li>学部 :  <select class="departments"></select></li>
          <li>学科 :  <select class="courses"></select></li>
          <li class='mt-2'><%= f.text_field :prof,class:'prof-new',placeholder:'教授名' %></li>
          <li class='mt-2'><%= f.text_field :comment,class:'comment-new',placeholder:'コメント(任意)' %></li>
        </ul>
        <%= f.submit '投稿',class:'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>