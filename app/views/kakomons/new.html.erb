<div class='container'>
  <div class='col-mg-3 new-container'>
    <div class='kakomon-new-content'>

      <h3>新規投稿</h3>

      <%= form_with model:@kakomon,class:'kakomon-new',local: true do |f| %>

        <ul>
          <li class='mt-2'>画像 : 
            <label for="image">
              <span class="button">画像を選択</span><%= f.file_field :image,accept: "image/*", id: "image" %>
            </label>
            <span id="file-name"></span>
          </li>
          <li class='mt-2'>
            年度  :
              <%= f.select :year, [["2010", "2010"],["2011", "2011"],["2012", "2012"],["2013", "2013"],
              ["2014", "2014"],["2015", "2015"],["2016", "2016"],["2017", "2017"],["2018", "2018"],
              ["2019", "2019"],["2020", "2020"],["2021", "2021"],["2022", "2022"]], {include_blank: "選択して下さい"},{class:'year'} %>
          </li>
          <li class='mt-2'>科目 :  <%= f.text_field :sub,class:'prof-new' %></li>
          <li class='mt-2'>教授 :  <%= f.text_field :prof,class:'prof-new' %></li>
          <li class='mt-2'>コメント(任意)<br><%= f.text_area :comment,class:'comment-new' %></li>
        </ul>

        <% if @kakomon.errors.any? %>
          <div class="error">
            <% @kakomon.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </div>
        <% end %>

        <%= f.submit '投稿',class:'btn btn-light kakomon-submit' %>
      <% end %>
    </div>
  </div>
</div>

