<div class='container'>
  <div class='col-mg-3 pt-3 new-container'>
    <div id='depSelector'>
    <h4>新規投稿</h4>
      <%= form_with model:@kakomon,class:'kakomon-new' do |f| %>
        <ul>
          <li class='mt-3'>画像を選択  :   <%= f.file_field :image, accept: "image/*", multiple: true %></li>
          <li class='mt-3'>科目 : <%= f.text_field :sub,class:'sub-new' %></li>
          <li class='mt-3'>
            年度  :
              <%= f.select :year, [["2010", "2010"],["2011", "2011"],["2012", "2012"],["2013", "2013"],
              ["2014", "2014"],["2015", "2015"],["2016", "2016"],["2017", "2017"],["2018", "2018"],
              ["2019", "2019"],["2020", "2020"],["2021", "2021"],["2022", "2022"]], {include_blank: "選択して下さい"},{class:'year'} %>
          </li>
          <li class='departments mt-3'></li>
          <li class='courses mt-3'></li>
          <li class='mt-3'>教授 : <%= f.text_field :prof,class:'prof-new' %></li>
          <li class='mt-3'>コメント(任意)<br>
          <%= f.text_area :comment,class:'comment-new mt-1' %></li>
        </ul>

        <% @kakomon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>

        <%= f.submit "投稿",class:'kakomon-submit' %>
      <% end %>
    </div>
  </div>
</div>