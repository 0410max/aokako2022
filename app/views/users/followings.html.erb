<div class='container'>
    <div class='col-md-10 users-show'>
        <div class='users-show-top'>
            <%= render 'userInfo' %>
        </div>
            
        <div class='count-follower-following'>
            <span class='following-page-kakomon-count'>
                <%= link_to user_path(@user),class:'user-show-top-following' do %>
                    投稿<%= @user.kakomons.count %>件
                <% end %>
            </span>
            <span class='following-page-followings'><%= link_to 'フォロー中',followings_user_path,class:'user-show-top' %></span>
            <span class='following-page-followers'><%= link_to 'フォロワー',followers_user_path,class:'user-show-top-following' %></span>
        </div>

        <% if @user.followings.count === 0 %>
            <% if @user === current_user %>
            <p class='no-follower'>ユーザーをフォローするとここに表示されます<p>
            <% else %>
                <p class='no-follwer'>@<%= @user.name %>がユーザーをフォローするとここに表示されます</p>
            <% end %>
        <% else %>
            <div class='following-table'>
                <table class='user-index-table'>
                    <tbody>
                        <% @users.each do |user| %>
                            <% if user === current_user %>
                                <tr>
                                    <td class='td-profile-image' height='50'> 
                                    <%= link_to user_path(user) do %>
                                        <%= image_tag user.get_profile_image,size:'30x30',class:'index-profile-image' %>
                                    <% end %>
                                    </td>
                                    <td class='td-user-name'><span class='user-name-height'><%= user.name %></span></td>
                                </tr>
                            <% end %>
                            <tr>
                                <% unless user === current_user %>
                                    <td class='td-profile-image' height='50'> 
                                        <%= link_to user_path(user) do %>
                                            <%= image_tag user.get_profile_image,size:'30x30',class:'index-profile-image' %>
                                        <% end %>
                                    </td>
                                    <td class='td-user-name'><span class='user-name-height'><%= user.name %></span></td>
                                    <td class='td-follow'>
                                        <% if user.followed_by?(current_user) %>
                                            <%= link_to'フォロー中',user_relationships_path(user),method: :delete,class:'user-followed' %>
                                        <% else %>
                                            <% unless user == current_user %>
                                                <%= link_to 'フォローする',user_relationships_path(user),method: :post,class:'user-following' %>
                                            <% end %>
                                        <% end %>
                                    </td>
                                <% end %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        <% end %>    
    </div>
</div>

