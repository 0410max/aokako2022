<% reportboard = Board.find(board.board_id) %>
<% comments = reportboard.board_comments.order(created_at: :desc) %>
<% if comments.count == 0 %>
    <span class='board-show-no-comment'>コメントはありません</span>
<% end %>
<% comments.each do |comment| %>
    <div class='other-user-comment'>
        <%= link_to end_user_path(comment.end_user),class:'index-profile-image-link' do %>
            <%= image_tag comment.end_user.get_profile_image,size:'30x30',class:'index-profile-image' %>
        <% end %>
        <span class='comment-user-name'><%= comment.end_user.name %></span>
        <span class='kakomon-date-report'><%= comment.created_at.strftime('%Y/%m/%d') %></span>
        <% board = reportboard %>
        <span class='delete-comment'><%= link_to '削除',admin_board_comment_path(comment.board,comment),class:'delete-comment-link',method: :delete,remote:true,data:{confirm:'本当に削除しますか？'} %></span>
        <div class='other-user-comment-content'>
            <%= simple_format(comment.comment) %>
        </div>
    </div>
    <br />
<% end %>